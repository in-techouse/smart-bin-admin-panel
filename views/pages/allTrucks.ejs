<% extend ('../layout')%>
<div class="row" style="padding: 20px;">
    <div class="col-md-12">

        <div class="responsive-table">
            <table class="table table-striped table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Driver ID</th>
                        <th>Registration</th>
                        <th>Capacity</th>
                        <th>Trucks</th>
                        <th>Edit</th>
                        <th>Detail</th>
                    </tr>
                </thead>
                <tbody>
                    <% trucks.forEach(truck => {%>
                    <tr>
                        <td><%=truck.val().driverId%></td>
                        <td><%=truck.val().truckModel%></td>
                        <td><%=truck.val().registrationNumber%></td>
                        <td><%=truck.val().truckCapacity%></td>
                        <td><a href="/admin/edittruck?id=<%= truck.val().id%>" class="btn btn-warning">Edit</a></td>
                        <td><a href="/admin/truckdetail?id=<%= truck.val().id%>" class="btn btn-primary">Detail</a></td>

                    </tr>

                    <%});%>
                </tbody>
            </table>
        </div>
    </div>
</div>