<% extend ('../layout')%>
<div class="panel form-element-padding">
    <div class="panel-heading">
        <h4>Add New Truck</h4>
    </div>
    <div class="panel-body" style="padding-bottom:30px;">
        <div class="col-md-12">
            <form>

                <div class="form-group">
                    <label class="col-sm-2 control-label text-right">Truck Model</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="truck model">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label text-right">Truc Registration Number</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="TruckRegistrationNumber">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label text-right">Truck Capacity</label>
                    <div class="col-sm-10">
                        <input type="capacity" class="form-control" name="truckCapacity">
                    </div>



                
                <div class="form-group">
                    <input type="submit" class="btn btn-block btn-primary" value="SAVE TRUCK">
                </div>



            </form>
        </div>
    </div>
</div>