<% extend ('../layout')%>
<div class="row" style="padding:20px ;">
    <div class="col-md-12">

        <div class="responsive-table">
            <table class="table table-striped table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Driver ID</th>
                        <th>Email</th>
                        <th>License Number</th>
                        <th>Phone Number</th>
                        <th>Edit</th>
                        <th>Detail</th>
                    </tr>
                </thead>
                <tbody>
                    <% drivers.forEach(driver => {%>
                    <tr>
                        <td><%=driver.val().name%></td>
                        <td><%=driver.val().id%></td>
                        <td><%=driver.val().email%></td>
                        <td><%=driver.val().lisenceNumber%></td>
                        <td><%=driver.val().phoneNumber%></td>
                        <td><a href="/admin/editdriver?id=<%= driver.val().id%>" class="btn btn-warning">Edit</a></td>
                        <td><a href="/admin/driverdetail?id=<%= driver.val().id%>" class="btn btn-primary">Detail</a></td>

                    </tr>

                    <%});%>
                </tbody>
            </table>
        </div>
    </div>
</div>